/* ================页面区域================ */

/* ================顶部区域================= */
.header {
  width:100%;
  height: 156rpx;
  background-color: #3963bc;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0px 4px 20px 0px rgba(0, 49, 107, 0.3);
  box-sizing: border-box;
  z-index: 1;
}

.header-text{
  position: absolute;
  z-index: 2;
  font-size: 28rpx;
  color: #fff;
  margin: 40rpx 0 0 60rpx;
  line-height: 48rpx;
}

.header-name {
  font-size: 32rpx;
}

/* 搜索栏固定顶部 */
.fixed {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    z-index: 99;
    margin: 0 auto;
}

/* ================搜索框区域================ */


/* ================内容区域================= */
.main {
  padding: 0 20rpx;
  z-index: 2;
  position: absolute;
  top: 100rpx;
}

/* ================轮播图区域================ */
.swiper {
  margin-top:4rpx;
  margin-bottom:16rpx;
  background: #f6f6f6;
  box-shadow: 0px 8rpx 20rpx 0px rgba(9, 36, 66, 0.04);
  border-radius: 30rpx;
  overflow: hidden;  /* 让照片循环的时候不变成直角 */
}

.swiper swiper{
  width:100%;
}

/* 设置轮播图 圆角 */
.slide-image {
  width: 100%;
}
/* ================卡片列表区域================ */
/* 设置卡片列表 下边距 */
.card{
  margin: 0 auto;
  width: 100%;
  box-shadow: 0 4rpx 20rpx 0 rgba(212, 217, 223, 0.5);
  border-radius: 6px;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 16rpx !important; 
}
.card-title {
  display: flex;
  justify-content: space-between;
}
.card-title-comment {
  font-size: 8pt;
  color: #3963BC;
  background-color: #f3f3f3;
  border-radius: 30rpx;
  padding:6rpx 20rpx;
}

.card-title-comment p:first-child{
  margin-right: 20rpx;
}

.card-describe {
  margin-top: 12rpx;
}




