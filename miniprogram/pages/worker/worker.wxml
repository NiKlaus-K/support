<!-- pages/worker/worker.wxml -->
<view style="text-align:center">{{title}}</view>
<view class="container">
  <view class="worker-container">
    <image class="worker-photo" src="{{ worker.photo }}"></image>
    <view class="worker-info">
      <p class="worker-name">{{ worker.name }}</p>
      <p class="worker-mobile">联系电话：{{ worker.mobile }}</p>
      <p class="worker-area">区域：{{ worker.area }}</p>
    </view>
  </view>
  <!-- 简介 卡片 -->
  <l-card l-class="worker-card" type="primary" plaintext="true">
    <view class="content worker-introduce">{{ worker.introduce }}</view>
  </l-card>
  <!-- 提交评论 -->
  <view class="worker-comment">
    <l-textarea l-class="worker-comment-textarea" placeholder="点击评价..." auto-height="{{true}}" border="{{true}}" indicator="{{false}}" />
    <view class="flex">
      <l-rate size="38" />
      <l-button shape="semicircle" size="mini">评价</l-button>
    </view>
    <h2>全部评论</h2>
    <!-- 分割线 -->
    <view class="divLine"></view>
    <!-- 开始------评论列表 -->
    <view class="comment-list">
      <l-avatar src="{{ comment.avatar }}" size="70" />
      <view class="comment-name">{{ comment.name }}</view>
      <view class="comment-list-btn">
        <view class="reply-btn">
          <l-icon name="comment" color="#666" size="28" />
          回复
        </view>
        <view>
          <l-icon name="like" color="#666" size="28" />
          {{ comment.like }}
        </view>
      </view>
      <view class="comment-content">{{ comment.content }}</view>
      <view class="comment-time">{{ comment.time }}</view>
      <!-- 评论回复区域 -->
      <view class="reply">
        <p class="reply-name">{{ comment.reply.name }}：</p>
        <p class="reply-content">{{ comment.reply.content}}</p>
      </view>
      <view class="divLine"></view>
    </view>
    <!-- 结束------评论列表 -->
