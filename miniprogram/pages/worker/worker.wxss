/* pages/worker/worker.wxss */

.container {
    display: flex;
    /* 设置水平排列，起点在左 */
    flex-direction: row;
    /* 水平居中 */
    justify-content: center;
    /* 换行 */
    flex-wrap: wrap;
     margin: 20rpx;
    width: 95%;
    padding: 10rpx 0;
    box-sizing: border-box;
    background-color: #fff;
}

.flex {
    display: flex;
}
/* ====================基本信息区域======================= */
.worker-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    width: 100%;
    margin: 12px 0px;
}


/* 左上角照片区域 */

.worker-photo {
  border: 1px solid #e8f0f9;
  width: 250rpx;
  height: 350rpx;
  border-radius: 0.3rem;
}


/* 工作人员姓名、电话区域 */

.worker-info {
    padding-left: 15px;
}

.worker-name {
    margin-top: 10px;
    font-size: 16pt;
    display: block;
}

.worker-mobile {
    margin-top: 10px;
    margin-bottom: 10px;
    font-size: 11pt;
    color: #888;
    display: block;
}

.worker-area {
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 11pt;
  color: #888;
  display: block;
}

/* ====================人员描述区域======================= */
.worker-introduce {
  width: 100%;
  display: flex;
    /* 设置水平排列，起点在左 */
  flex-direction: row;
  /* 水平居左 */
  justify-content: flex-start;
  margin: 0;
  font-size: 28rpx;
  color: #333;
  border-radius: 0.3rem;
  margin-bottom: 10px;
  padding: 10px;
}


/* 评论区 */

.worker-comment {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    width: 100%;
}


/* ============================提交评论区域============================ */

.worker-comment .flex{
    /* 设置flex布局两端对齐 */
    justify-content: space-between;
    margin-top: 10px;
}

.worker-comment .flex l-rate {
    /* flex布局下 项目item左对齐 */
    align-self: flex-start !important;
}

.comment-form{
  width: 100%;
}

.comment-submit{
    /* flex布局下 项目item右对齐 */
    align-self: flex-end !important;
}

.comment-submit button{
  color: white;
  background-color: #3963bc;
    border-radius: 0.8rem;
}

/* ============================评论列表区域============================ */
h2 {
    font-size: 14pt;
    width: 100%;
    left: 0px;
    color: #333;
    margin-top: 10px;
    margin-bottom: 5px;
}

.comment-title{
    margin-bottom: 10px;
}
/* 评论列表 */
.comment-list {
    width: 100%;
    display: flex;
    /* 主轴 垂直 */
    flex-direction: column;
    /* 主轴 自上而下 */
    justify-content: flex-start;
    /* 交叉轴 自左而右 */
    align-items: flex-start;
    /* 换行 */
    flex-wrap: wrap;
    padding: 16rpx 8rpx 8rpx;
}
/* 单个评论 */
.comment-item {
    width: 100%;
    display: flex;
    /* 主轴 垂直 */
    flex-direction: column;
    /* 主轴 居左 */
    justify-content: space-between;
    /* 换行 */
    flex-wrap: nowrap;
}
/* 评论顶部一行：评论人头像、姓名、右上角按钮 */
.comment-item-title{
    width: 100%;
    display: flex;
    /* 主轴 水平 */
    flex-direction: row;
    /* 主轴 居左 */
    justify-content: flex-start;
    /* 交叉轴 垂直居中 */
    align-items: flex-start;
    /* 换行 */
    flex-wrap: wrap;
    padding: 16rpx 8rpx 8rpx;
}
/* 评论人姓名 */
.comment-name {
    font-size: 12pt;
    color: #355eb6;
    margin-left: 10px;
}


/* 评论列表 右上角按钮 */
.comment-list-btn {
    /* ☆☆☆☆☆☆设置右上角 按钮项   居右显示 */
    margin-left: auto;
}

.comment-list-btn view {
    font-size: 10pt;
    color: #888;
    display: inline !important;
    margin: 0 2px;
}


/* 评论内容 */

.comment-content {
    font-size: 11pt;
    color: #343434;
    padding: 0px 5px;
}


/* 评论时间 */

.comment-time {
    font-size: 10pt;
    color: #888;
    margin: 0px 5px 2px;
}


/* ============================评论回复区域============================ */


.reply {
    background-color: #fff;
    width: 90%;
    /* 居右显示 */
    margin-left: auto;
    margin-bottom: 8px;
    padding: 4px;
    border-radius: 6px;
    line-height: 1.2rem;
    display: block;
    /* x偏移量 | y偏移量 | 阴影颜色 */
    /* x偏移量 | y偏移量 | 阴影模糊半径 | 阴影颜色 */
    /* x偏移量 | y偏移量 | 阴影模糊半径 | 阴影扩散半径 | 阴影颜色 */
    -webkit-box-shadow: 1px 1px 2x 2px rgba(0, 0,0,0.1);
    -moz-box-shadow: 1px 1px 2px 2px rgba(0, 0,0,0.1);
    box-shadow: 1px 1px 2px 2px rgba(0, 0, 0, 0.1); 
}

.reply-name {
    font-size: 10pt;
    color: #355eb6;
}

.reply-content {
    margin-bottom: 5px;
    font-size: 10pt;
    color: #888;
}